@{
    Layout = null;
    var course = ViewBag.Course as List<BusinessObject.Model.Course>;
    int idCourse = 0;
    foreach (var c in course)
    {
        idCourse = c.Id;
    }
    var lesson = ViewBag.Lessons as List<BusinessObject.Model.Lesson>;
    var comment = ViewBag.Comments;
    int countComment = 0;
    foreach (var c in comment)
