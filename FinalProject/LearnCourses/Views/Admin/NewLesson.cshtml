@{
    Layout = null;
    var courseid = ViewBag.CourseId;
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model BusinessObject.Model.Lesson;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Lesson</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .form-wrapper {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border: 2px solid #007bff;
        }

        .form-title {
            color: #007bff;
            font-size: 24px;
            margin-bottom: 30px;
        }

        .form-control-label {
            font-weight: bold;
        }

        .btn-action {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <i class="fas fa-chevron-left" onclick="goBack()"></i>
        <h1 class="text-center mb-4">COURSE SETTING</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="form-wrapper">
                    <h2 class="form-title">New Lesson</h2>
                    <form id="courseForm" asp-action="NewLesson" method="post">
                        <input type="hidden" name="idCourse" value="@courseid"/>
                            <div class="form-group">
                                <label for="name" class="form-control-label">Name:</label>
                                <input type="text" asp-for="Name" class="form-control" id="name" name="name">
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-control-label">Description:</label>
                                <textarea class="form-control" asp-for="Content" id="Content" name="Content"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="VideoUrl" class="form-control-label">VideoUrl:</label>
                                <input type="text" class="form-control" id="videourl" asp-for="VideoUrl" name="VideoUrl">
                            </div>
                            <div class="form-group">
                                <label for="IsPublish" class="form-control-label">IsPublished:</label>
                            <input type="text" class="form-control" id="videourl" asp-for="IsPublished" name="IsPublished">
                            </div>
                        <button type="submit" class="btn btn-primary btn-action">Add</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
