@{
    Layout = null;
    var courseList = ViewBag.Course as List<BusinessObject.Model.Course>;
    var lessons = ViewBag.Lessons as List<BusinessObject.Model.Lesson>;
    var courseId = ViewBag.CourseId;
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .form-wrapper {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border: 2px solid #007bff;
        }

        .form-title {
            color: #007bff;
            font-size: 24px;
            margin-bottom: 30px;
        }

        .form-control-label {
            font-weight: bold;
        }

        .btn-action {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <i class="fas fa-chevron-left" onclick="goBack()"></i>
        <h1 class="text-center mb-4">COURSE SETTING</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="form-wrapper">
                    <h2 class="form-title">Course Settings</h2>
                    <form id="courseForm">
                        @foreach(var item in courseList){
                            <input type="hidden" value="@courseId" />
                            <div class="form-group">
                                <label for="name" class="form-control-label">Name:</label>
                                <input type="text" class="form-control" id="name" name="name" value="@item.Name">
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-control-label">Description:</label>
                                <textarea class="form-control" id="description" name="description">@item.Description</textarea>
                            </div>
                            <div class="form-group">
                                <label for="content" class="form-control-label">Content:</label>
                                <textarea class="form-control" id="content" name="content">@item.Content</textarea>
                            </div>
                            <div class="form-group">
                                <label for="price" class="form-control-label">Price:</label>
                                <input type="text" class="form-control" id="price" name="price" value="@item.Price">
                            </div>
                            <div class="form-group">
                                <label for="image" class="form-control-label">Image:</label>
                                <input type="file" class="form-control-file" id="image" name="image" value="@item.ThumbnailImage">
                            </div>
                        }
                        <button type="submit" class="btn btn-primary btn-action">Update</button>
                        <button type="button" class="btn btn-danger btn-action">Delete</button>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-wrapper">
                    <h2 class="form-title">Lessons</h2>
                    <form method="post" asp-action="ManageLesson" asp-controller="Admin">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Content</th>
                                    <th>Video URL</th>
                                    <th>Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach(var item in lessons){
                                    <tr>
                                        <td><input type="checkbox" name="lessonId" value="@item.Id"/></td>
                                        <td>@item.Name</td>
                                        <td>@item.Content</td>
                                        <td>@item.VideoUrl</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                            <input type="hidden" name="courseId" value="@courseId" />
                            <button type="submit" class="btn btn-success btn-action" name="feature" value="Add">Add</button>
                            <button type="submit" class="btn btn-primary btn-action" name="feature" value="Update">Update</button>
                            <button type="submit" class="btn btn-danger btn-action" name="feature" value="Delete">Delete</button>
                    </form>

                </div>
            </div>
        </div>
    </div>


    <script>
        function goBack() {
            window.history.back();
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
</body>
</html>
