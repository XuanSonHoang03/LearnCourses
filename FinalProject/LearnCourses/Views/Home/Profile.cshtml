                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                            <li><a href="/Home/HomePage">Home</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Course <span class="fa fa-angle-down"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/Courses/Courses">Course Archive</a></li>
                                <li><a href="/Courses/CoureDetails">Course Detail</a></li>
                                </ul>
                            </li>
                        <li><a href="/Home/Gallery">Gallery</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog <span class="fa fa-angle-down"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Blog/BlogPublic">Blog Public</a></li>
                                <li><a href="/Blog/BlogSingle">Blog Single</a></li>
                            </ul>
                        </li>
                            <li class="active"><a href="/Home/Contact">Contact</a></li>
                            <li><a href="404.html">404 Page</a></li>
                            <li><a href="#" id="mu-search-icon"><i class="fa fa-search"></i></a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-user"></i> <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a href="/Home/Profile">Profile</a></li>
                                    <li><a href="course-detail.html">Balance</a></li>
                                <li><a href="/Courses/Cart">Cart</a></li>
                                    <li><a href="/Home/Logout">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div><!--/.nav-collapse -->
                </div>
            </nav>
        </section>
        <!-- End menu -->
        <!-- Start search box -->
        <div id="mu-search">
            <div class="mu-search-area">
                <button class="mu-search-close"><span class="fa fa-close"></span></button>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="mu-search-form">
                                <input type="search" placeholder="Type Your Keyword(s) & Hit Enter">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End search box -->
        <!-- Page breadcrumb -->
        <section id="mu-page-breadcrumb">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mu-page-breadcrumb-area">
                            <h2>Profile</h2>
                            <ol class="breadcrumb">
                                <li><a href="/Home/HomePage">Home</a></li>
                                <li class="active">Profile</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End breadcrumb -->
        <!-- Start content  -->
        <section id="mu-contact">
            <div class="container">
                <div class="row">
                    <!-- Profile Editing Section -->
                    <div class="col-md-6">
                        <div class="mu-contact-left">
                            <div class="mu-contact-form">
                                <h2>Edit Profile</h2>
                                <form class="contactform" asp-action="Profile" method="post">
                                    <div class="form-group">
                                        <label for="firstname">First Name <span class="required">*</span></label>
                                        <input type="text" class="form-control" required="required" name="firstname" value="@Model.FirstName" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <label for="lastname">Last Name <span class="required">*</span></label>
                                    <input type="text" class="form-control" required="required" name="lastname" value="@Model.LastName">
                                    </div>
                                    <div class="form-group">
                                        <label for="email">Email <span class="required">*</span></label>
                                        <input type="email" class="form-control" required="required" name="email" value="@Model.Email">
                                    </div>
                                <div class="form-group">
                                    <label for="balance">Balance <span class="required">*</span></label>
                                    <input type="text" class="form-control" name="balance" value="@Model.Balance" readonly>
                                </div>
                                    <div class="form-group">
                                        <label for="username">Username <span class="required">*</span></label>
                                        <input type="text" class="form-control" required="required" name="username" value="@Model.Username">
                                    </div>
                                <h3><strong style="color: green">@TempData["Success"]</strong></h3>
                                <h3><strong style="color: red">@TempData["Error"]</strong></h3>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Update Profile</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Password Change Section -->
                    <div class="col-md-6">
                        <div class="mu-contact-right">
                            <div class="mu-contact-form">
                                <h2>Change Password</h2>
                                <form class="change-password-form" asp-action="ChangePassword" method="post">
                                    <div class="form-group">
                                        <label for="current-password">Current Password <span class="required">*</span></label>
                                        <input type="password" class="form-control" required="required" name="oldPassword">
                                    </div>
                                    <div class="form-group">
                                        <label for="new-password">New Password <span class="required">*</span></label>
                                        <input type="password" class="form-control" required="required" name="newPassword">
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm-password">Confirm New Password <span class="required">*</span></label>
                                        <input type="password" class="form-control" required="required" name="confirmPassword">
                                    </div>
                                    <h3 style="color: red">@TempData["Fail"]</h3>
                                    <h3 style="color: green">@TempData["Ok"]</h3>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Change Password</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- End content  -->
        <!-- Start footer -->
        <footer id="mu-footer">
            <!-- start footer top -->
            <div class="mu-footer-top">
                <div class="container">
                    <div class="mu-footer-top-area">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3">
                                <div class="mu-footer-widget">
                                    <h4>Information</h4>
                                    <ul>
                                        <li><a href="#">About Us</a></li>
                                        <li><a href="">Features</a></li>
