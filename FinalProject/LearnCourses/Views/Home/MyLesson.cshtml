@{
    Layout = null;
    var list = ViewBag.Lessons as List<BusinessObject.Model.Lesson>;
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>LearnCourses | My Course</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="../home/assets/img/favicon.ico" type="image/x-icon">

    <!-- Font awesome -->
    <link href="../home/assets/css/font-awesome.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="../home/assets/css/bootstrap.css" rel="stylesheet">
    <!-- Slick slider -->
    <link rel="stylesheet" type="text/css" href="../home/assets/css/slick.css">
    <!-- Fancybox slider -->
    <link rel="stylesheet" href="../home/assets/css/jquery.fancybox.css" type="text/css" media="screen" />
    <!-- Theme color -->
    <link id="switcher" href="../home/assets/css/theme-color/default-theme.css" rel="stylesheet">

    <!-- Main style sheet -->
    <link href="../home/assets/css/style.css" rel="stylesheet">
    <style>
        .mu-table-custom {
            width: 100%;
            border-collapse: collapse;
        }

        /* Định dạng các ô trong bảng */
        .mu-course-content-area th,
        .mu-course-content-area td {
            padding: 12px 15px; /* Khoảng cách giữa nội dung và viền */
            text-align: center; /* Căn giữa nội dung */
            border: 1px solid #ddd; /* Định dạng viền */
        }

        /* Định dạng hàng tiêu đề */
        .mu-course-content-area th {
            background-color: #f2f2f2; /* Màu nền */
            color: #333; /* Màu chữ */
            font-weight: bold; /* Làm đậm chữ */
        }

        /* Định dạng hàng lẻ */
        .mu-course-content-area tbody tr:nth-child(odd) {
            background-color: #f9f9f9; /* Màu nền */
        }

        /* Định dạng hover */
        .mu-course-content-area tbody tr:hover {
            background-color: #f5f5f5; /* Màu nền khi hover */
        }

        /* Định dạng cột Process */
        .mu-th-process, .mu-td-process {
            background-color: #dff0d8; /* Màu nền */
            color: #3c763d; /* Màu chữ */
            font-weight: bold; /* Làm đậm chữ */
        }


    </style>

    <!-- Google Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,700' rel='stylesheet' type='text/css'>

</head>
<body>
    <!--START SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#">
        <i class="fa fa-angle-up"></i>
    </a>
    <!-- END SCROLL TOP BUTTON -->
    <!-- Start header  -->
    <header id="mu-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="mu-header-area">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <div class="mu-header-top-left">
                                    <div class="mu-top-email">
                                        <i class="fa fa-envelope"></i>
                                        <span>info@markups.io</span>
                                    </div>
                                    <div class="mu-top-phone">
                                        <i class="fa fa-phone"></i>
                                        <span>(568) 986 652</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End header  -->
    <!-- Start menu -->
    <section id="mu-menu">
        <nav class="navbar navbar-default" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <!-- FOR MOBILE VIEW COLLAPSED BUTTON -->
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- LOGO -->
                    <!-- TEXT BASED LOGO -->
                    <a class="navbar-brand" href="index.html"><i class="fa fa-university"></i><span>LearnCourses</span></a>
                    <!-- IMG BASED LOGO  -->
                    <!-- <a class="navbar-brand" href="index.html"><img src="assets/img/logo.png" alt="logo"></a> -->
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul id="top-menu" class="nav navbar-nav navbar-right main-nav">
                        <li><a href="/Home/HomePage">Home</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Course <span class="fa fa-angle-down"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Courses/Courses">Course Archive</a></li>
                                <li><a href="/Courses/CourseDetails">Course Detail</a></li>
                            </ul>
                        </li>
                        <li class="active"><a href="/Home/Gallery">Gallery</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Blog <span class="fa fa-angle-down"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Blog/BlogPublic">Blog Public</a></li>
                                <li><a href="/Blog/BlogSingle">Blog Single</a></li>
                            </ul>
                        </li>
                        <li><a href="/Home/Contact">Contact</a></li>
                        <li><a href="404.html">404 Page</a></li>
                        <li><a href="#" id="mu-search-icon"><i class="fa fa-search"></i></a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-user"></i> <span class="fa fa-angle-down"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Home/Profile">Profile</a></li>
                                <li><a href="course-detail.html">Balance</a></li>
                                <li><a href="/Courses/Cart">Cart</a></li>
                                <li><a href="/Home/Logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    </section>
    <!-- End menu -->
    <!-- Start search box -->
    <div id="mu-search">
        <div class="mu-search-area">
            <button class="mu-search-close"><span class="fa fa-close"></span></button>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <form class="mu-search-form">
                            <input type="search" placeholder="Type Your Keyword(s) & Hit Enter">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End search box -->
    <!-- Page breadcrumb -->
    <section id="mu-page-breadcrumb">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-page-breadcrumb-area">
                        <h2>My Lesson</h2>
                        <ol class="breadcrumb">
                            <li><a href="/Home/HomePage">Home</a></li>
                            <li class="active">Gallery</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End breadcrumb -->
    <!-- Start content courses -->
    <section id="mu-course-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-course-content-area">
                        <div class="row">
                            <div class="col-xs-12">
                                <!-- start course content container --> 
                                <div class="table-responsive">
                                    
                                        <table class="table table-bordered mu-table-custom">
                                            <thead>
                                                <tr>
                                                    <th class="mu-th-stt">STT</th>
                                                    <th class="mu-th-name">Name</th>
                                                    <th class="mu-th-content">Content</th>
                                                    <th class="mu-th-video">VideoUrl</th>
                                                    <th class="mu-th-process">Process</th>
                                                </tr>
                                            </thead>
                                        @foreach (var c in list)
                                        {
                                            <tbody>
                                                <tr>
                                                    <td>1</td>
                                                    <td>@c.Name</td>
                                                    <td>@c.Content</td>
                                                    <td><a href="video_url_1">@c.VideoUrl</a></td>
                                                    <td class="mu-td-process">0%</td>
                                                    </tr>
                                            </tbody>
                                            }
                                        </table>
                                </div>
                                <!-- end course content container -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--  content courses -->
    <!-- Start footer -->
    <footer id="mu-footer">
        <!-- start footer top -->
        <div class="mu-footer-top">
            <div class="container">
                <div class="mu-footer-top-area">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-footer-widget">
                                <h4>Information</h4>
                                <ul>
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="">Features</a></li>
                                    <li><a href="">Course</a></li>
                                    <li><a href="">Event</a></li>
                                    <li><a href="">Sitemap</a></li>
                                    <li><a href="">Term Of Use</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-footer-widget">
                                <h4>Student Help</h4>
                                <ul>
                                    <li><a href="">Get Started</a></li>
                                    <li><a href="#">My Questions</a></li>
                                    <li><a href="">Download Files</a></li>
                                    <li><a href="">Latest Course</a></li>
                                    <li><a href="">Academic News</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-footer-widget">
                                <h4>News letter</h4>
                                <p>Get latest update, news & academic offers</p>
                                <form class="mu-subscribe-form">
                                    <input type="email" placeholder="Type your Email">
                                    <button class="mu-subscribe-btn" type="submit">Subscribe!</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-footer-widget">
                                <h4>Contact</h4>
                                <address>
                                    <p>FPT University - Thach That - Hoa Lac - Ha Noi</p>
                                    <p>Phone: +0123456789 </p>
                                    <p>Website: <a style="color: white; cursor: pointer; border-color: white;" href="#">My Website</a></p>
                                    <p>Email: LearnCourses@gmail.com</p>
                                </address>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end footer top -->
        <!-- start footer bottom -->
        <div class="mu-footer-bottom">
            <div class="container">
                <div class="mu-footer-bottom-area">
                    <p>&copy; All Right Reserved. Designed by <a href="http://www.markups.io/" rel="nofollow">MarkUps.io</a></p>
                </div>
            </div>
        </div>
        <!-- end footer bottom -->
    </footer>
    <!-- End footer -->
    <!-- jQuery library -->
    <script src="../home/assets/js/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="../home/assets/js/bootstrap.js"></script>
    <!-- Slick slider -->
    <script type="text/javascript" src="../home/assets/js/slick.js"></script>
    <!-- Counter -->
    <script type="text/javascript" src="../home/assets/js/waypoints.js"></script>
    <script type="text/javascript" src="../home/assets/js/jquery.counterup.js"></script>
    <!-- Mixit slider -->
    <script type="text/javascript" src="../home/assets/js/jquery.mixitup.js"></script>
    <!-- Add fancyBox -->
    <script type="text/javascript" src="../home/assets/js/jquery.fancybox.pack.js"></script>

    <!-- Custom js -->
    <script src="../home/assets/js/custom.js"></script>


</body>
</html>